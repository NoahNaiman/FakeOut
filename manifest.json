{
	"manifest_version": 2,

	"name": "FakeOut",
	"description": "Tracks what users are writings and checks if they are using correct facts. If not it will correct them. If so it will present articles relating to topics they are discussing.",
	"version": "1.0",
	// "background":{
	// 	"scripts": ["jquery.min.js"]
	// 	"persistent": false
	// },

	// "browser_action": {
	// 	"default_popup": "popup.html"
	// },
	"content_scripts":[{
		"js": ["jquery-3.2.1.js", "background.js"],
		"matches": ["http://*/*", "https://*/*"]
	}],
	"web_accessible_resources": ["jquery-3.2.1.js", "index.js"],
	"permissions":[
		"pageCapture",
		"activeTab"
		// "tabs",
		// "http://www.google.com/*"
	],
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"

}